# 修改配置後重啟編輯器
# 配置項文件：https://editorconfig.org/

# 告知 EditorConfig 外掛，目前即是根檔案
root = true

# 適用全部檔案
[*]
## 設定字符集
charset = utf-8
## 縮排風格 space | tab，建議 space（會自動繼承給 Prettier）
indent_style = space
## 縮排的空格數（會自動繼承給 Prettier）
indent_size = 2
## 換行符型別 lf | cr | crlf，一般都是設定為 lf
end_of_line = lf
## 是否在檔案末尾插入空白行
insert_final_newline = true
## 是否刪除一行中的前後空格
trim_trailing_whitespace = true

# 適用 .md 檔案
[*.md]
insert_final_newline = false
trim_trailing_whitespace = false
